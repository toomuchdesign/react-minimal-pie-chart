{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./types",
    "baseUrl": "./",
    "paths": {
      "*": ["@types/*"]
    },
    "noErrorTruncation": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src/index.ts"],
  "exclude": ["node_modules"]
}
